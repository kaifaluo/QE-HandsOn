&CONTROL
    calculation = "scf"
    max_seconds =  8.64000e+04
 !In the next line provide the address to your own Pseudopotential file
    pseudo_dir  = "."
    tprnfor     = .TRUE.
    tstress     = .TRUE.
/

&SYSTEM
    a                         =  2.7800e+00
    degauss                   =  1.00000e-02
    ecutrho                   =  4.00000e+02
    ecutwfc                   =  4.00000e+01
